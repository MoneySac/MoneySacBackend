<% content_for :for_head do %>
  <title>Categories</title>
<% end %>

<%= render "layouts/sidebar" %>

<div class="col-md-10">
<h1>Created categories</h1>
<div class="col-md-7">
<table class="table">
  <thead>
    <tr>
      <th class="col-md-4">Name</th>
      <th class="col-md-2">Type</th>
      <th class="col-md-1" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>  <% if category.isIncome == true %>
                  <%= "Income" %>
                <% else %>
                  <%= "Expense "%>
                <% end %></td>
        <td><%= link_to 'Show', category, :class => "btn btn-default btn-sm " %></td>
        <td><%= link_to 'Edit', edit_category_path(category), :class => "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => "btn btn-default" %>
</div></div>